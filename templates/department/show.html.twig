{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ department.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ department.address }}</td>
            </tr>
            <tr>
                <th>Roi</th>
                <td>{{ department.roi }}</td>
            </tr>
            <tr>
                <th>Nom du departement</th>
                <td>{{ department.deptName }}</td>
            </tr>
            <tr>
                <th>Manager</th>
                <td>{{ deptManager.employee.firstName }} {{ deptManager.employee.lastName }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('uploads/photos/' ~ deptManager.employee.photo) }}" alt="photo" width="100" height="100"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_department_index') }}">back to list</a>

    <a href="{{ path('app_department_edit', {'id': department.id}) }}">edit</a>

    {{ include('department/_delete_form.html.twig') }}
{% endblock %}
