{% extends 'base.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}
    <h1>Nos partenaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Url</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.title }}</td>
                <td><a href="{{ partner.url }}">{{ partner.url }}</a></td>
                <td><img src="{{ asset('logoPartners/' ~ partner.logo) }}" alt="Logo" width="70" height="50"></td>
                <td>
                    <a href="{{ path('app_partner_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partner_new') }}">Create new</a>
{% endblock %}
